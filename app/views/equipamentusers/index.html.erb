<p id="notice"><%= notice %></p>

<h1>Associações</h1>

<table>
  <thead>
    <tr>
      <th>Equipamento</th>
      <th>Usuário</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipamentusers.each do |equipamentuser| %>
      <tr>
        <td><%= link_to equipamentuser.equipament.nome, sensors_path %></td>
        <td><%= equipamentuser.user.name %></td>
        <td><%= link_to 'Excluir', equipamentuser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Incluir associação', new_equipamentuser_path %>
