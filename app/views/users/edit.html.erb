<% provide(:title, 'Editar usuário') %>

<div class="divform">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <br>
      
      <%= form_for(@user) do |f| %>
    
      <%= render 'shared/error_messages' %>
      
      <label>Nome </label>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Nome' %>
  
      <label>E-mail </label>
      <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>

      <label>Tipo </label>
      <%= f.select(:usertype, [['Administrador', 'A'], ['Usuário', 'U']], {prompt: 'Selecione o tipo'}, {class: 'form-control'}) %>
      
      <label>Senha </label>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Crie uma senha' %>

      <label>Confirmar senha </label>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: ' Confirme a senha' %>

      <%= f.submit "Alterar usuário", class: "btn btn-primary" %>
      
      <% end %>
      
      <br>
      
    </div>
  </div>
</div>